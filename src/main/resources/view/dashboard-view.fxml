<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="dashboardPage" prefHeight="791.0" prefWidth="1522.0"
            style="-fx-background-color: white; -fx-background-radius: 90;" stylesheets="@../styles/dashboard.css"
            xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dinidu.lk.pmt.controller.DashboardViewController">
    <children>
        <AnchorPane layoutX="-14.0" prefHeight="103.0" prefWidth="1534.0" styleClass="header-bar">
            <children>
                <ImageView fx:id="mainIcon" fitHeight="89.0" fitWidth="96.0" layoutX="14.0" layoutY="7.0"
                           onMouseClicked="#mainIconOnClick" pickOnBounds="true" preserveRatio="true"
                           style="-fx-cursor: hand;">
                    <image>
                        <Image url="@../asserts/icons/PN.png"/>
                    </image>
                </ImageView>
                <Label layoutX="104.0" layoutY="34.0" styleClass="nav-label" text="Project Nexus"/>
                <ImageView fx:id="settingId" fitHeight="26.0" fitWidth="32.0" layoutX="1405.0" layoutY="43.0"
                           onMouseClicked="#settingsClick" pickOnBounds="true" preserveRatio="true"
                           styleClass="icon-hover">
                    <image>
                        <Image url="@../asserts/icons/setting.png"/>
                    </image>
                </ImageView>
                <ImageView fx:id="bellClick" fitHeight="26.0" fitWidth="32.0" layoutX="1367.0" layoutY="43.0"
                           onMouseClicked="#notifyClick" pickOnBounds="true" preserveRatio="true"
                           styleClass="icon-hover">
                    <image>
                        <Image url="@../asserts/icons/bell.png"/>
                    </image>
                </ImageView>
                <ButtonBar layoutX="315.0" layoutY="31.0" prefHeight="50.0" prefWidth="1026.0">
                    <buttons>
                        <Button fx:id="projectsButton" onAction="#clickOnProjects" styleClass="nav-button"
                                text="Projects"/>
                        <Button fx:id="issuesButton" layoutX="473.0" layoutY="11.0" onAction="#clickOnIssues"
                                prefHeight="48.0" styleClass="nav-button" text="Issues"/>
                        <Button fx:id="reportsButton" onAction="#clickOnReports" styleClass="nav-button"
                                text="Reports"/>
                        <Button fx:id="taskButton" onAction="#clickOnTask" styleClass="nav-button" text="Tasks"/>
                        <Button fx:id="timesheetsButton" onAction="#clickOnTimesheets" prefHeight="48.0"
                                prefWidth="163.0" styleClass="nav-button" text="Timesheets"/>
                        <Button fx:id="dashboardButton" onAction="#clickOnDashboard" prefHeight="48.0" prefWidth="179.0"
                                styleClass="nav-button" text="Dashboards"/>
                    </buttons>
                </ButtonBar>
                <AnchorPane fx:id="profileIcon" layoutX="1438.0" layoutY="19.0" onMouseClicked="#myProfile"
                            prefHeight="63.0" prefWidth="82.0"
                            style="-fx-background-color: white; -fx-background-radius: 300;" styleClass="icon-hover">
                    <ImageView fx:id="profileImageIcon" fitHeight="73.0" fitWidth="73.0" preserveRatio="true"/>
                </AnchorPane>
            </children>
        </AnchorPane>
        <AnchorPane fx:id="contentPane" layoutY="120.0" prefHeight="670.0" prefWidth="1522.0">
            <children>
                <AnchorPane fx:id="projectsDisplayCard" layoutX="37.0" layoutY="59.0" prefHeight="547.0"
                            prefWidth="506.0" styleClass="card-container-Dashboard">
                    <VBox layoutY="9.0" prefHeight="498.0" prefWidth="466.0" spacing="20"
                          styleClass="dashboard-container">
                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="466.0" spacing="20">
                            <Label prefHeight="27.0" prefWidth="180.0" styleClass="card-title"
                                   text="  Ongoing Projects"/>
                            <Label fx:id="totalProjectsLabel" prefHeight="18.0" prefWidth="231.0"
                                   styleClass="total-count"/>
                            <ImageView fx:id="refreshButtonForProjects" fitHeight="25.0" fitWidth="19.0"
                                       pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                <image>
                                    <Image url="@../asserts/icons/refresh.png"/>
                                </image>
                            </ImageView>
                        </HBox>

                        <ScrollPane fx:id="scrollPane" prefHeight="459.0" prefWidth="466.0" VBox.vgrow="ALWAYS">
                            <VBox fx:id="ongoingProjectsContainer" spacing="12"/>
                        </ScrollPane>
                    </VBox>
                </AnchorPane>
                <AnchorPane fx:id="pieChartDisplayCard" layoutX="1101.0" layoutY="59.0" prefHeight="547.0"
                            prefWidth="410.0" styleClass="card-container-Dashboard">
                    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10"
                          AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="card-title" text="Top assignees"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ImageView fx:id="refreshButton" fitHeight="25.0" fitWidth="19.0" pickOnBounds="true"
                                       preserveRatio="true" style="-fx-cursor: hand;">
                                <image>
                                    <Image url="@../asserts/icons/refresh.png"/>
                                </image>
                            </ImageView>
                        </HBox>

                        <PieChart fx:id="assigneesPieChart" labelsVisible="false" legendVisible="false"/>

                        <ScrollPane fitToWidth="true" prefHeight="100.0" prefWidth="350.0" styleClass="legend-scroll">
                            <VBox fx:id="legendContainer" spacing="8" styleClass="legend-container"/>
                        </ScrollPane>
                    </VBox>
                </AnchorPane>
                <AnchorPane fx:id="taskDisplayCard" layoutX="575.0" layoutY="59.0" prefHeight="547.0" prefWidth="506.0"
                            styleClass="card-container-Dashboard">
                    <VBox spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                          AnchorPane.topAnchor="0">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label styleClass="card-title" text="Unresolved tasks"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <ImageView fx:id="refreshButtonForTasks" fitHeight="25.0" fitWidth="19.0"
                                       pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                                <image>
                                    <Image url="@../asserts/icons/refresh.png"/>
                                </image>
                            </ImageView>
                        </HBox>
                        <ScrollPane fitToWidth="true" styleClass="task-scroll-pane" VBox.vgrow="ALWAYS">
                            <VBox fx:id="tasksContainer" spacing="8"/>
                        </ScrollPane>
                    </VBox>
                </AnchorPane>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
