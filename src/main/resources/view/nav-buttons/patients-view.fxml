<AnchorPane fx:id="issuesPage" prefHeight="700.0" prefWidth="1522.0" stylesheets="@../../styles/dashboard/project.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dinidu.lk.pmt.controller.dashboard.IssuesViewController">
