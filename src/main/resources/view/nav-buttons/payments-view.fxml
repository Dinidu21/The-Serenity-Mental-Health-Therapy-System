<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<AnchorPane stylesheets="@../../styles/dashboard/payment.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.dinidu.lk.pmt.controller.dashboard.payments.PaymentsViewController">

    <VBox spacing="10" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20" right="20" bottom="10" left="20" />
        </padding>
        <Label text="Payment &amp; Invoice Management" styleClass="page-title">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <Separator />
    </VBox>
    <SplitPane dividerPositions="0.4"
               orientation="VERTICAL"
               AnchorPane.topAnchor="90.0"
               AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"
               AnchorPane.bottomAnchor="0.0">
        <VBox spacing="15" styleClass="content-panel">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>

            <!-- Payment Processing Section -->
            <TitledPane text="Process Payment" styleClass="section-title">
                <VBox spacing="15">
                    <GridPane hgap="15" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="100" prefWidth="150" />
                            <ColumnConstraints prefWidth="250" hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <ComboBox fx:id="patientComboBox" promptText="Select Patient" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="250" />

                        <Label text="Therapy Session:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <ComboBox fx:id="sessionComboBox" promptText="Select Session" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="250" />

                        <Label text="Amount ($):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <TextField fx:id="amountField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Payment Date:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <DatePicker fx:id="paymentDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Payment Method:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <HBox spacing="15" GridPane.rowIndex="4" GridPane.columnIndex="1" HBox.hgrow="ALWAYS">
                            <RadioButton fx:id="cashRadio" text="Cash" selected="true" HBox.hgrow="ALWAYS">
                                <toggleGroup>
                                    <ToggleGroup fx:id="paymentMethodToggle" />
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="cardRadio" text="Credit Card" toggleGroup="$paymentMethodToggle" HBox.hgrow="ALWAYS" />
                            <RadioButton fx:id="insuranceRadio" text="Insurance" toggleGroup="$paymentMethodToggle" HBox.hgrow="ALWAYS" />
                        </HBox>

                        <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <ComboBox fx:id="statusComboBox" promptText="Select Status" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </GridPane>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="processPaymentBtn" text="Process Payment" styleClass="btn-primary" onAction="#handleProcessPayment" />
                        <Button fx:id="clearFormBtn" text="Clear Form" onAction="#handleClearForm" />
                    </HBox>
                </VBox>
            </TitledPane>
        </VBox>

        <!-- Combined Invoice and Transactions Section -->
        <VBox spacing="15" styleClass="content-panel">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20" />
            </padding>
            <TitledPane text="Invoice and Transactions" styleClass="section-title">
                <VBox spacing="15">
                    <!-- Invoice Management Controls -->
                    <HBox spacing="20">
                        <VBox spacing="10" HBox.hgrow="ALWAYS">
                            <Label text="Invoice Details" styleClass="subsection-title" />
                            <TextArea fx:id="invoiceDetailsArea" prefHeight="150" editable="false" styleClass="invoice-details" />
                        </VBox>
                        <VBox spacing="10" alignment="CENTER">
                            <Button fx:id="generateInvoiceBtn" text="Generate Invoice" prefWidth="150" styleClass="btn-primary" onAction="#handleGenerateInvoice" />
                            <Button fx:id="printInvoiceBtn" text="Print Invoice" prefWidth="150" onAction="#handlePrintInvoice" />
                            <Button fx:id="emailInvoiceBtn" text="Email Invoice" prefWidth="150" onAction="#handleEmailInvoice" />
                        </VBox>
                    </HBox>

                    <!-- Transaction Controls -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Payment Transactions" styleClass="subsection-title" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label text="Filter:" />
                        <ComboBox fx:id="filterComboBox" promptText="All Transactions">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="All Transactions" />
                                    <String fx:value="Pending" />
                                    <String fx:value="Completed" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                        <TextField fx:id="searchField" promptText="Search transactions..." prefWidth="200" />
                    </HBox>

                    <TableView fx:id="transactionsTableView" VBox.vgrow="ALWAYS" style="-fx-border-color: red; -fx-border-width: 2;">
                        <columns>
                            <TableColumn fx:id="idColumn" text="Payment ID" prefWidth="100" />
                            <TableColumn fx:id="patientColumn" text="Patient" prefWidth="150" />
                            <TableColumn fx:id="sessionColumn" text="Session" prefWidth="150" />
                            <TableColumn fx:id="amountColumn" text="Amount" prefWidth="100" />
                            <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" />
                            <TableColumn fx:id="methodColumn" text="Method" prefWidth="100" />
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="120" />
                        </columns>
                    </TableView>

                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button fx:id="refreshBtn" text="Refresh" onAction="#handleRefresh" />
                        <Button fx:id="exportBtn" text="Export Data" onAction="#handleExport" />
                    </HBox>
                </VBox>
            </TitledPane>
        </VBox>
    </SplitPane>
</AnchorPane>